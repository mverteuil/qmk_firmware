// Place your settings in this file to overwrite default and user settings.
{
    // Unofficially, QMK uses spaces for indentation
    "editor.insertSpaces": true,
    // Configure glob patterns for excluding files and folders.
    "files.exclude": {
        "**/.build": true,
        "**/*.hex": true
    },
    "files.associations": {
      "*.h": "c",
      "*.c": "c",
      "*.cpp": "cpp",
      "*.hpp": "cpp",
      "xstddef": "c",
      "type_traits": "c",
      "utility": "c",
      "chrono": "c",
      "hash_map": "c",
      "hash_set": "c",
      "map": "c",
      "set": "c",
      "unordered_map": "c",
      "algorithm": "c",
      "complex": "c",
      "new": "c",
      "__locale": "c",
      "locale": "c"
    },
    "favorites.resources": [
      "keyboards/knops/mini",
      "keyboards/massdrop/ctrl",
      "keyboards/preonic",
      "keyboards/boardwalk",
      "users/mverteuil"
    ]
}
